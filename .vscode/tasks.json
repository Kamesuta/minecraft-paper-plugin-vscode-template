{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Plugin",
            "type": "shell",
            "command": "mvn package && ./scripts/copy_plugin.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Start Minecraft Server (Debug Mode)",
            "type": "shell",
            "command": "java -Xmx2G -Xms2G -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:5005 -jar paper.jar --nogui",
            "options": {
                "cwd": "${workspaceFolder}/run"
            },
            "isBackground": true,
            "problemMatcher": {
                "owner": "java-debug-server",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Listening for",
                    "endsPattern": "^.*transport dt_socket at address.*"
                }
            },
            "dependsOn": ["Build Plugin"]
        }
    ]
}
